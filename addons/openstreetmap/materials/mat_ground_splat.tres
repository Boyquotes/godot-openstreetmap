uniform float blur     = 0.05;
uniform float grassres = 1;
uniform float rockres  = 1;
uniform float dirtres  = 1;
uniform float waterres = 1;
uniform vec2 water_movement = vec2(0, 0);

color splat = 0.25*(tex(splatmap,UV+vec2(blur, blur))+tex(splatmap,UV+vec2(-blur, blur))+tex(splatmap,UV+vec2(blur, -blur))+tex(splatmap,UV+vec2(-blur, -blur)));

vec3 result;
vec3 grasscol;
vec3 rockcol;
vec3 dirtcol;
vec3 watercol;

float grassval = splat.g;
float rockval = splat.r;
float waterval = splat.b;
float dirtval = max(0, 1-grassval-rockval-waterval);

dirtcol = tex(dirt,UV*dirtres).rgb * dirtval;
grasscol = tex(grass,UV*grassres).rgb * grassval;
rockcol = tex(rock,UV*rockres).rgb * rockval;
watercol = tex(water,UV*waterres+TIME*water_movement).rgb * waterval;

result = grasscol+rockcol+dirtcol+watercol;

DIFFUSE = result;
